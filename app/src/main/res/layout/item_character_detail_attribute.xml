<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_character"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_large"
    android:paddingTop="@dimen/margin_small"
    android:paddingEnd="@dimen/margin_large"
    android:paddingBottom="@dimen/margin_small">

    <TextView
        android:id="@+id/text_attribute_label"
        style="@style/TextView.Paragraph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Occupation:" />

    <TextView
        android:id="@+id/text_attribute_value"
        style="@style/TextView.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_attribute_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="High School Chemistry Teacher, Meth King PIn" />

</androidx.constraintlayout.widget.ConstraintLayout>